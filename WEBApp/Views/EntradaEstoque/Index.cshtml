
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html lang="pt-br">
<head>
    <title>Título da página</title>
    <meta charset="utf-8">
</head>
<body>

    <div class="col-md-12">
        <div class="box box-primary">
            <div class="col-md-12">
                <div class="col-md-9">
                    <div class="box-header with-border">
                        <h5 class="box-title">Nota fiscal</h5>
                    </div>
                </div>


            </div>

            <form role="form">

                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-2">
                                <label>Data da Entrada</label>
                                <input class="form-control" type="date" id="dtDataMvm" data-date-for>
                            </div>

                            <div class="col-md-5">
                                <label>Fornecedor</label>
                                <select class="form-control" id="sslFornecedor">
                                    <option>LUXOTICA</option>
                                    <option>HOYA</option>
                                </select>
                            </div>


                            <div class="col-md-5">
                                <label>CFOP</label>
                                <select class="form-control" id="sslCFOP">
                                    <option></option>
                                    <option></option>
                                    <option></option>
                                    <option></option>
                                </select>
                            </div>
                        </div>




                        <div class="row">
                            <div class="col-md-2">
                                <label>Nota Fiscal</label>
                                <input class="form-control" type="text" id="txtNumeroNota">
                            </div>

                            <div class="col-md-3">
                                <label>Modelo</label>
                                <select class="form-control" id="sslTipoNf">
                                    <option value="55">55 - Nota Fiscal Eletrônica</option>
                                </select>
                            </div>

                            <div class="col-md-2">
                                <label>Série</label>
                                <input class="form-control" type="text" id="txtSerie">
                            </div>

                            <div class="col-md-2">
                                <label>Sub-Série</label>
                                <input class="form-control" type="text" id="txtSubSerie">
                            </div>


                            <div class="col-md-3">
                                <label>Valor Total da Nota</label>
                                <input type="text" class="form-control" id="txtValorNota">
                            </div>
                        </div>

                    </div>

                </div>

                <div class="box-header with-border">
                    <h5 class="box-title">Relação de itens</h5>
                </div>
                <div class="card">


                    <div class="card-body">

                        <div class="row">

                            <div class="col-md-3">
                                <label>Código Fantasia</label>
                                <div class="input-group input-group">
                                    <input type="text" class="form-control" id="txtFantasia">
                                    <span class="input-group-btn">
                                        @*<button type="button" id="btnPesquisar" class="btn btn-info btn-flat">Go!</button>*@

                                        <button type="button" id="btnPesquisarProduto" class="btn btn-social-icon" style="border: solid 1px;">
                                            <i class="fa fa-fw fa-search"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <label>Produto</label>
                                <input type="text" class="form-control" id="txtProduto" disabled>
                            </div>

                            <div class="col-md-2">
                                <label>Quantidade</label>
                                <input type="text" class="form-control" id="txtQtd">
                            </div>
                        </div>


                        <div class="row">

                            <div class="col-md-2">
                                <label>Valor Unitário <span style="color:red">R$</span></label>
                                <input type="text" id="txtValorUnitario" class="form-control" />
                            </div>

                            <div class="col-md-2">
                                <label>Total IPI <span style="color:red">R$</span></label>
                                <input type="text" id="txtIPI" class="form-control" />
                            </div>

                            <div class="col-md-2">
                                <label>Custo Total <span style="color:red">R$</span></label>
                                <input type="text" id="txtCustoTotal" class="form-control" />
                            </div>

                            <div class="col-md-2">
                                <label>Markup <span style="color:lawngreen">%</span></label>
                                <input type="text" id="txtMarkup" class="form-control" />
                            </div>

                            <div class="col-xl-3 col-lg-4 col-sm-6">
                                <label>Valor de Venda <span style="color:lawngreen">R$</span></label>
                                <div class="input-group input-group">
                                    <input type="text" class="form-control" id="txtMvmvalvenda">
                                    <span class="input-group-btn">


                                        <button type="button" id="btnAdicionarItemGrid" class="btn btn-social-icon" style="border: solid 1px;">
                                            <i class="mdi mdi-content-save-outline"></i>
                                        </button>
                                    </span>
                                </div>

                            </div>

                        </div>
                    </div>


                    <div class="card">
                        <div class="card-body">

                            <div class="row">

                                <div class="col-md-12">

                                    <table id="tbMovimentacao" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                                        <thead>
                                            <tr>
                                                <td>Ação</td>
                                                <td>Item</td>
                                                <td>Fantasia</td>
                                                <td>Quantidade</td>
                                                <td>V. Custo Total</td>
                                                <td>V. IPI</td>
                                                <td>V. Custo</td>
                                                <td>Markup</td>
                                                <td>V. Venda</td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>


                                </div>


                            </div>

                        </div>
                    </div>



                </div>
            </form>
        </div>
    </div>

    <div class="modal fade bs-example-modal-lg" id="txtModal" tabindex="-1" aria-labelledby="myLargeModalLabel" style="display: none;" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <table id="tbListaProdutosEntrada" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                        <thead>
                            <tr>
                                <td>Ação</td>
                                <td>Código</td>
                                <td>Fantasia</td>
                                <td>Grife</td>
                                <td>Cor</td>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>

                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>

</body>
</html>




<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/jsPaginas/jsEntradaEstoque.js"></script>